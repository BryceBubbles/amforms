{% import '_includes/forms' as forms %}

{{ forms.selectField({
    label: 'Form'|t,
    instructions: 'Which form do you want to see submissions from?'|t,
    id: 'form',
    name: 'form',
    options: availableForms,
    value: settings.form,
    errors: settings.getErrors('form')
}) }}

{{ forms.textField({
    label: 'Limit'|t,
    id: 'limit',
    name: 'limit',
    value: settings.limit,
    size: 2,
    errors: settings.getErrors('limit')
}) }}

{{ forms.lightswitchField({
    label: 'Show date'|t,
    id: 'showDate',
    name: 'showDate',
    on: settings.showDate,
    errors: settings.getErrors('showDate')
}) }}

{{ forms.lightswitchField({
    label: 'Show time'|t,
    id: 'showTime',
    name: 'showTime',
    on: settings.showTime,
    errors: settings.getErrors('showTime')
}) }}
