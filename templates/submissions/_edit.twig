{% extends '_layouts/cp' %}

{% import '_includes/forms' as forms %}

{% set title = 'Edit submission'|t %}

{% set crumbs = [
    { label: craft.amForms.name, url: url('amforms') },
    { label: 'Submissions'|t, url: url('amforms/submissions') }
] %}

{% if namespace is not defined %}{% set namespace = 'fields' %}{% endif %}

{% block main %}
    <form method="post" accept-charset="UTF-8" enctype="multipart/form-data" data-saveshortcut="1" data-saveshortcut-redirect="amforms/submissions/edit/{id}" data-confirm-unload>
        {{ getCsrfInput() }}
        <input type="hidden" name="action" value="amForms/submissions/saveSubmission">
        <input type="hidden" name="handle" value="{{ form.handle }}">
        <input type="hidden" name="submissionId" value="{{ submissionId }}">
        <input type="hidden" name="redirect" value="amforms/submissions/edit/{id}">

        <div class="grid first">
            <div class="item first" data-position="left" data-min-colspan="2" data-max-colspan="3">
                <div id="fields" class="pane">
                    {% include "_includes/tabs" %}

                    {% for tab in layoutTabs -%}
                        {% set fields = tab.getFields() -%}

                        <div id="tab{{ loop.index }}"{% if not loop.first %} class="hidden"{% endif %}>
                            {% namespace namespace %}
                                {% for field in fields %}
                                    {% include "_includes/field" with {
                                        field: field.getField(),
                                        required: field.required,
                                        element: submission,
                                        static: null
                                    } only %}
                                {% endfor %}
                            {% endnamespace %}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="item" data-position="right" data-colspan="1">
                <div class="pane">
                    <p>{{ 'Date created'|t }}<br/><strong>{{ submission.dateCreated|date('F j, Y') }}</strong></p>

                    <p>{{ 'Form name'|t }}<br/><strong>{{ form.name }}</strong></p>

                    <p>{{ 'Submitted from'|t }}<br /><strong>{{ submission.submittedFrom }}</strong></p>

                    <div class="right">
                        <input type="button" class="btn small formsubmit" value="{{ 'Delete'|t }}" data-action="amForms/submissions/deleteSubmission" data-confirm="{{ "Are you sure you want to delete this submission and all of it's data?"|t }}" data-redirect="amforms/submissions">
                    </div>
                </div>
                <hr>
                <div class="buttons first">
                    <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
                </div>
            </div>
        </div>
    </form>
{% endblock %}
