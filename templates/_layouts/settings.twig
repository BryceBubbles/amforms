{% extends '_layouts/cp' %}

{% import '_includes/forms' as forms %}

{% set crumbs = [
    { label: craft.amForms.name, url: url('amforms') },
    { label: 'Settings'|t, url: url('amforms/settings') },
    { label: title, url: '#' }
] %}

{% set tabs = {
    general: { label: 'General'|t, url: url('amforms/settings') },
    recaptcha: { label: 'reCAPTCHA'|t, url: url('amforms/settings/recaptcha') }
} %}

{% set content %}
    <form id="settings-form" method="post" accept-charset="UTF-8" data-saveshortcut>
        {{ getCsrfInput() }}
        <input type="hidden" name="settingsType" value="{{ type }}">
        <input type="hidden" name="action" value="amForms/settings/saveSettings">

        {% block fields %}{% endblock %}

        <hr>
        <div class="buttons">
            <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
        </div>
    </form>
{% endset %}